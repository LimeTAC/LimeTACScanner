<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.tagEntity.packageTag.PackageTagActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activityPackageTag_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_red">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtToolbar"
            style="@style/ToolbarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/package_tag_title"
            android:textSize="20sp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activityAntennaTag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/neue_bold"
        android:gravity="center"
        android:textSize="25sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityPackageTag_toolbar"
        tools:text="Forklift Name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/activityAntennaTag_scanTagBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityAntennaTag_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/activityAntennaTag_gridTagRowOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowOneLeft"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowOneLeft_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowOneRight"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowOneRight_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/activityAntennaTag_gridTagRowTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityAntennaTag_gridTagRowOne">

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowTwoLeft"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowTwoLeft_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowTwoRight"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowTwoRight_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/activityAntennaTag_gridTagRowThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activityAntennaTag_gridTagRowTwo">

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowThreeLeft"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowThreeLeft_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/activityAntennaTag_rowThreeRight"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/cd_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/activityAntennaTagRowThreeRight_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/neue_bold"
                        android:gravity="center"
                        android:textColor="@color/secondaryFontColor"
                        android:textSize="35sp"
                        tools:text="0" />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activityAntennaTag_scanTagBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:fontFamily="@font/neue_bold"
        android:text="@string/scan_next_tag"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>